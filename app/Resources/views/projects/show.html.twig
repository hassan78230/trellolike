{% extends 'base.html.twig' %}

{% block body %}


<h1>{{ project.name }}</h1>
<section class="flextask">
  <section class="taskstatus">
    <h2>En cours</h2>
    {% for task in project.tasks %}
    {% if task.status == 'wip' %}
    <div class="task">
      <div class="taskTitle">
        <h3>{{ task.title}}</h3><!--
        --><a href="{{ path('tasks_edit' , {'id': task.id })}}">
          <i class="far fa-edit"></i>

        </a>
      </div>
      {% for user in task.userstask %}
      <p>{{ user.firstname }}</p>
      {% endfor %}
    </div>
      {% endif %}
      {% endfor %}
  </section>
  <section class="taskstatus">
    <h2>A faire</h2>
    {% for task in project.tasks %}
    {% if task.status == 'todo' %}
    <div class="task">
      <div class="taskTitle">
        <h3>{{ task.title}}</h3><!--
        --><a href="{{ path('tasks_edit' , {'id': task.id })}}">
          <i class="far fa-edit"></i>

        </a>
      </div>
      {% for user in task.userstask %}
      <p>{{ user.firstname }}</p>
      {% endfor %}
    </div>
      {% endif %}
      {% endfor %}

  </section>
  <section class="taskstatus">
    <h2>Termin√©</h2>
    {% for task in project.tasks %}
    {% if task.status == 'done' %}
    <div class="task">
      <div class="taskTitle">
        <h3>{{ task.title}}</h3><!--
        --><a href="{{ path('tasks_edit' , {'id': task.id })}}">
          <i class="far fa-edit"></i>

        </a>
      </div>
      {% for user in task.userstask %}
      <p>{{ user.firstname }}</p>
      {% endfor %}
    </div>
      {% endif %}
      {% endfor %}
  </section>

</section>
<a href="{{ path('tasks_new' , {'id': project.id })}}">ajouter une tache</a>



